#--------------------------------------------------------------------
# Environment Configuration Example
#--------------------------------------------------------------------
# Copy this file to .env and update the values for your environment
# This file shows what environment variables are available

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost/newsoft/base_app/'
# app.forceGlobalSecureRequests = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# EMAIL CONFIGURATION
#--------------------------------------------------------------------
email.protocol = smtp
email.SMTPHost = mail.yourdomain.com
email.SMTPUser = support@yourdomain.com
email.SMTPPass = your_email_password_here
email.SMTPPort = 465
email.SMTPCrypto = ssl
email.fromEmail = support@yourdomain.com
email.fromName = Your Company Name

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
# Generate a secure encryption key (32 characters)
# You can use: bin2hex(random_bytes(32))
encryption.key = your_encryption_key_here_32_chars

#--------------------------------------------------------------------
# PAYMENT GATEWAY - MIDTRANS
#--------------------------------------------------------------------
midtrans.serverKey = your_midtrans_server_key
midtrans.clientKey = your_midtrans_client_key
midtrans.isProduction = false

